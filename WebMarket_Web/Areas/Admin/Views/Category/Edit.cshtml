@using WebMarket_Web.Areas.Admin.Models.Category
@model EditCategoryViewModel
@{
}
<div class="col-lg-12">

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Edit @Model.Title</h5>

            <!-- General Form Elements -->
            <form asp-area="Admin" asp-controller="Category" asp-action="Edit" method="post">
                <div class="row mb-3">
                    @Html.EditorFor(m => m.Title)
                </div>
                <div class="row mb-3">
                    @Html.EditorFor(m => m.Slug)
                </div>

                <div class="row mb-3">
                    @Html.EditorFor(m => m.MetaTag)
                </div>

                <div class="row mb-3">
                    @Html.EditorFor(m => m.MetaDescription)
                </div>

                <div class="row mb-3">
                    @Html.EditorFor(m => m.Description)
                </div>

                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Edit</button>
                  </div>

            </form><!-- End General Form Elements -->

        </div>
    </div>

</div>










@using WebMarket_CoreLayer.DTOs
@model MainPageDto
@{
    ViewData["Title"] = "Home Page";
    
}

    <div class="col-md-10">
        <div class="row">          
        @foreach (var item in Model.Products)
        {
            <div class="card col-md-2 m-1">
                <img src="~/assets/img/product-1.jpg" class="card-img-top" alt="@item.MetaTag">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Price</p>
                    <a asp-controller="home" asp-action="ShowProdut" asp-route-slug="@item.Slug" class="btn btn-primary">Show</a>
                </div>
            </div>
        }</div> 
    </div>
    <div class="col-md-2">
<ul class="list-group m-1">
  <li class="list-group-item active">Brands</li>
            @foreach(var brand in Model.Brands)
            {
            <li class="list-group-item">
               <a asp-controller="home" asp-action="ShowBrand" asp-route-slug="@brand.Slug">
@brand.Title
               </a> 
                </li>
                
            }
 
</ul>
<ul class="list-group m-1">
  <li class="list-group-item active">Category</li>
            @foreach(var category in Model.Categories)
            {
            <li class="list-group-item">
               <a asp-controller="home" asp-action="ShowBrand" asp-route-slug="@category.Slug">
@category.Title
               </a> 
                </li>
                
            }
 
</ul>
    </div>


